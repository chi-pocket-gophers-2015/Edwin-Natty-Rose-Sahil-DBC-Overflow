<h1>SOOOOO FLOW</h1>
<div class="container">
  <% @questions.each do |question| %>

    <form class="upvote" action="/questions/<%=question.id%>/upvotes" method="post">
        <img class="vote upvote" src="http://coloradoclt.org/blog/wp-content/uploads/2013/01/thumbs-up-icon-black-hi.png" alt="upvote" style="width:42px;height:42px;border:0">
      <input type='submit'>
    </form>
    <p><%= question.up_vote_count %></p>

    <form class="downvote" action="/questions/<%=question.id%>/downvotes" method="post">
        <img class="vote downvote" src="http://uxrepo.com/static/icon-sets/font-awesome/svg/thumbs-down-alt.svg" alt="downvote" style="width:42px;height:42px;border:0">
        <input type='submit'>
    </form>

    <p><%= question.down_vote_count %></p>
      <h3>Question:</h3>

      <h2><a href='/questions/<%=question.id%>'><%= question.title %> </a></h2>
      <em><%= question.created_at %></em>
      <br>

      <%= question.body %>
      <%= question.programming_language %>

      <p>
        <a href="/questions/<%=question.id%>/answers/new">Respond with an Answer</a>
      </p>

      <hr>

    <% end %>

</div>

  <br>

<a href="/questions/new"><h3>Ask a question!</h3></a>


